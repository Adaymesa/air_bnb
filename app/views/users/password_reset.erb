<h1 style="margin-top:5px">Reset Password</h1>
<br><br>
<div align="center">
  <p>Please enter your new password</p>
  <form action="/users?token=<%=params[:token]%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class=tiny_space></div>
    <input placeholder="New Password" type="password" name="password" required>
    <div class=tiny_space></div>
    <input placeholder="Confirm Password" type="password" name="password_confirmation" required>
    <div class=mini_space></div>
    <input class="go_button" type="submit" value="Update">
  </form>
</div>
