<h1>Spaces</h1>
<div class="tiny_space"></div>
<a class="link" href="/spaces/new">Add a new space</a>
<div class="tiny_space"></div>
<div align="center">
  <% @spaces.each do |space| %>
    <div class="space" style="width:75%">
      <p><%=space.name%></p>
      <p><%=space.description%></p>
      <p><%=space.price%></p>
      <p class="username">by <strong><%=space.user.name%></strong> (@<%=space.user.username%>)</p>
      <div class="tiny_space"></div>
    </div>
  <%end%>
  </div>
</div>
