<h1>Spaces</h1>
<form method='get' action='/spaces'>
  Available from: <input type="date" name="available_from" required/>
  Available to: <input type="date" name="available_to" required/>
  <input type='submit' value='List Spaces' class="button">
</form>
<div class="tiny_space"></div>
<a class="link" href="/spaces/new">Add a new space</a>
<div class="tiny_space"></div>
<div align="center">
  <% @spaces.each do |space| %>
  <a id="space<%=space.id%>" href="/spaces/<%=space.id%>">
    <div style="width:75%">
      <table style="width:100%">
        <tr>
          <td class="ellipsis">Name</td>
          <td class="ellipsis"><%=space.name%></td>
          <td></td>   
        </tr>
        <tr>
          <td class="ellipsis">Description</td>
          <td><div id="div2"><%=space.description%></div></td>
          <td>Book</td>   
        </tr>
        <tr>
          <td class="ellipsis">Price</td>
          <td class="ellipsis"><%=space.price%></td> 
          <td></td> 
        </tr>
      </table>
      <p class="username">by <strong><%=space.user.name%></strong> (@<%=space.user.username%>)</p>
      <div class="tiny_space"></div>
    </a>
  </div>
  <%end%>
</div>
</div>
