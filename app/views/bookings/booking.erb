<%=@booking.space.name%>
<form action="/bookings/<%=@booking.id%>/confirmed" method="post">
  <input id="confirm" class="button" type="submit" value="Confirm"/>
</form>
<form action="/bookings/<%=@booking.id%>/denied" method="post">
  <input class="button" type="submit" value="Deny"/>
</form>
